                <StackPanel Orientation="Horizontal">
                        <Image Source="D:\Windows Programming\Lession5\Lession5\Exercise 1\Images\icedtea.jpg" Height="30" Width="30"></Image>
                    <TextBlock Text="Iced Tea"></TextBlock>
                </StackPanel>
                </CheckBox>
            </ListBoxItem>
            <ListBoxItem Background="#FF9D8686" FontWeight="Bold">
                <CheckBox Name="MangoCheckBox">
                <StackPanel Orientation="Horizontal">
                        <Image Source="D:\Windows Programming\Lession5\Lession5\Exercise 1\Images\mangoshake.jpg" Height="30" Width="30"></Image>
                    <TextBlock Text="Mango Shake"></TextBlock>
                </StackPanel>
